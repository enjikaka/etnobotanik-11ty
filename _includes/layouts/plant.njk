---
layout: layouts/plantBase.njk
section: plants
---

<article>
  <header>
    <div class="text">
      <h1>{{ title }}</h1>
      <small>{{ latinName }}</small>
    </div>
    {% if latinName %}
    <figure>
      <img src="{{ latinName | thumbnailSrc }}" srcset="{{ latinName | thumbnailSrcset }}" sizes="144px" alt="Utvald bild på {{ title }}" />
    </figure>
    {% endif %}
  </header>

  <img src="{{ latinName | floraVonDeutschlandSrc }}" srcset="{{ latinName | floraVonDeutschlandSrcset }}" width="507px" sizes="507px" alt="Översiktbild på växtdelar av {{ title }}" />

  {{ layoutContent | safe }}
</article>

