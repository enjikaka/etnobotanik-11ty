---
layout: layouts/plantBase.njk
section: plants
---

<article>
  <header>
    <div class="text">
      <h1>{{ title }}</h1>
      <small>{{ latinName }}</small>
    </div>
    {% if latinName %}
    <figure>
      <img src="{{ latinName | thumbnailSrc }}" srcset="{{ latinName | thumbnailSrcset }}" sizes="144px" alt="Utvald bild på {{ title }}" />
    </figure>
    {% endif %}
  </header>

  <img src="{{ latinName | floraVonDeutschlandSrc }}" srcset="{{ latinName | floraVonDeutschlandSrcset }}" width="507px" sizes="507px" alt="Översiktsbild på växtdelar av {{ title }}" />

  {{ layoutContent | safe }}

  <img src="{{ latinName | nordensFloraSrc }}" alt="Översiktsbild på växtdelar av {{ title }}" />

  <footer>
    <div class="tags">
      {{ tags | generateTagLinks | safe }}
    </div>
  </footer>
</article>

{% include "components/donate.njk" %}

{% if imageCredit %}
  <article>
    Bilder från<br>
    {{ imageCredit | generateCreditLinks | safe }}
  </article>
{% endif %}
