---
layout: layouts/plantBase.njk
section: plants
---

<article>
  <header>
    <div class="text">
      <h1>{{ title }}</h1>
      <small>{{ latinName }}</small>
    </div>
  </header>

  {% if latinName %}
  <figure class="thumbnail">
    <img src="{{ latinName | thumbnailSrc }}" srcset="{{ latinName | thumbnailSrcset }}" sizes="144px" alt="Utvald bild på {{ title }}" />
  </figure>
  {% endif %}

  {{ layoutContent | safe }}

  <img src="{{ latinName | fitch }}" width="100%" alt="Illustration över växtdelar av {{ title }}" />

  <footer>
    <div class="tags">
      {{ tags | generateTagLinks | safe }}
    </div>
  </footer>
</article>

{% include "components/donate.njk" %}

{% if imageCredit %}
  <article>
    Bilder från<br>
    {{ imageCredit | generateCreditLinks | safe }}
  </article>
{% endif %}
